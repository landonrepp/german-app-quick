{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "electron:dev": "concurrently -k -r \"npm:dev\" \"wait-on tcp:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder --dir",
    "electron:dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@protontech/jsmimeparser": "^3.0.2",
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    
    "lang-detection": "file:lang-detection/pkg",
    "next": "15.4.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.13",
    
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.4.1",
    "typescript": "^5",
    "concurrently": "^9.1.0",
    "wait-on": "^8.0.1",
    "electron": "^31.3.0",
    "electron-builder": "^25.1.8"
  }
  ,
  "main": "electron/main.js",
  "build": {
    "appId": "com.example.germanapp",
    "productName": "German App",
    "files": [
      "electron/**",
      ".next/**",
      "public/**",
      "package.json",
      "node_modules/**",
      "next.config.ts",
      "src/**"
    ],
    "asarUnpack": [
      "node_modules/**/build/Release/*.node"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": ["nsis"],
      "publisherName": "German App"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Utility"
    }
  }
}
