{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/main/schemas/tauri.schema.json",
  "productName": "German App",
  "version": "0.1.0",
  "identifier": "com.example.germanapp",
  "build": {
    "beforeDevCommand": "bash ../scripts/tauri-dev.sh",
    "devUrl": "http://localhost:3000",
    "frontendDist": null
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "German App",
        "width": 1280,
        "height": 800,
        "visible": true,
        "url": "about:blank",
        "devtools": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "resources": [
      "../.next",
      "../node_modules/better-sqlite3",
      "../migrations"
    ]
  }
}
