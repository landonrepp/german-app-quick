{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "http://localhost:3000",
  "distDir": "stub-dist"
  },
  "package": {
    "productName": "German App",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "shell": { "open": true }
    },
    "bundle": {
      "active": true,
      "identifier": "com.example.germanapp",
      "targets": "all",
      "resources": [
        "next-standalone"
      ],
      "macOS": {
        "exceptionDomain": "localhost"
      }
    },
    "security": { "csp": null },
    "windows": [
      {
        "label": "main",
        "title": "German App",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ]
  }
}
